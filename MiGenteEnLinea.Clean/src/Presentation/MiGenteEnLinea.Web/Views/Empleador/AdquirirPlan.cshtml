        }

        .modal-header {
            border-bottom: 2px solid #dee2e6;
        }

        .bg-light {
            background-color: #f8f9fa !important;
        }
    </style>
}

@section Scripts {
    <script>
        let planSeleccionado = { planID: 0, nombre: '', precio: 0 };

        function seleccionarPlan(planID, nombre, precio) {
            planSeleccionado = { planID, nombre, precio };
            
            // Actualizar modal
            document.getElementById('planIDSeleccionado').value = planID;
            document.getElementById('lblPlanNombre').textContent = nombre;
            document.getElementById('lblMonto').textContent = `RD$${precio.toFixed(2)}`;
            
            // Abrir modal
            const modal = new bootstrap.Modal(document.getElementById('checkoutModal'));
            modal.show();
        }

        function abrirTerminos(event, url) {
            event.preventDefault();
            const opcionesVentana = "width=800,height=600,resizable=yes,scrollbars=yes";
            window.open(url, "Términos y Condiciones", opcionesVentana);
        }

        // Formatear número de tarjeta (agrega espacios cada 4 dígitos)
        document.addEventListener('DOMContentLoaded', function() {
            const txtTarjeta = document.getElementById('txtNumeroTarjeta');
            const txtVencimiento = document.getElementById('txtVencimiento');

            if (txtTarjeta) {
                txtTarjeta.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\s/g, '');
                    let formattedValue = value.match(/.{1,4}/g)?.join(' ') || value;
                    e.target.value = formattedValue;
                });
            }

            if (txtVencimiento) {
                txtVencimiento.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    if (value.length >= 2) {
                        value = value.substring(0, 2) + '/' + value.substring(2, 4);
                    }
                    e.target.value = value;
                });
            }
        });

        // Manejar envío del formulario
        document.getElementById('formCheckout')?.addEventListener('submit', async function(e) {
            e.preventDefault();

            // Validar checkboxes
            const chkTerminos = document.getElementById('chkTerminos');
            const chkAutorizacion = document.getElementById('chkAutorizacion');

            if (!chkTerminos.checked || !chkAutorizacion.checked) {
                Swal.fire({
                    icon: 'error',
                    title: '¡No Puede Continuar con El Registro!',
                    text: 'Debe Aceptar todos los Términos y Condiciones.',
                });
                return;
            }

            // Obtener datos del formulario
            const formData = {
                PlanID: parseInt(document.getElementById('planIDSeleccionado').value),
                NombreTitular: document.getElementById('txtNombreTitular').value.trim(),
                NumeroTarjeta: document.getElementById('txtNumeroTarjeta').value.replace(/\s/g, ''),
                FechaVencimiento: document.getElementById('txtVencimiento').value,
                CVV: document.getElementById('txtCVV').value,
                Monto: planSeleccionado.precio
            };

            // Validaciones básicas
            if (!formData.NombreTitular || !formData.NumeroTarjeta || !formData.FechaVencimiento || !formData.CVV) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Campos incompletos',
                    text: 'Por favor complete todos los campos del formulario.',
                });
                return;
            }

            // Mostrar indicador de procesamiento
            document.getElementById('btnCompletarSuscripcion').disabled = true;
            document.getElementById('divProcesando').style.display = 'block';

            try {
                // Llamar a API para procesar pago
                const response = await fetch('/Empleador/ProcesarPago', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();

                // Ocultar indicador
                document.getElementById('btnCompletarSuscripcion').disabled = false;
                document.getElementById('divProcesando').style.display = 'none';

                if (result.success) {
                    // Cerrar modal
                    const modal = bootstrap.Modal.getInstance(document.getElementById('checkoutModal'));
                    modal.hide();

                    // Mostrar éxito
                    Swal.fire({
                        icon: 'success',
                        title: '¡Suscripción completada!',
                        text: 'Compra realizada correctamente. En breve recibirá una notificación de correo electrónico con el detalle de la transacción.',
                        confirmButtonText: 'Aceptar'
                    }).then(function() {
                        window.location.href = '/Empleador/MiPerfil';
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: '¡Error al procesar el pago!',
                        text: result.message || 'Ha ocurrido un problema al procesar tu pago. Por favor, inténtalo de nuevo.',
                    });
                }
            } catch (error) {
                console.error('Error al procesar pago:', error);
                document.getElementById('btnCompletarSuscripcion').disabled = false;
                document.getElementById('divProcesando').style.display = 'none';

                Swal.fire({
                    icon: 'error',
                    title: '¡Error de conexión!',
                    text: 'No se pudo conectar con el servidor. Por favor, inténtalo más tarde.',
                });
            }
        });
    </script>
}
