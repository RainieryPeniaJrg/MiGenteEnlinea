@{
    // Selección dinámica de layout basado en controlador
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    
    // Determinar layout apropiado según el controlador
    if (controller == "Empleador")
    {
        Layout = "_LayoutEmpleador";
    }
    else if (controller == "Contratista")
    {
        Layout = "_LayoutContratista";
    }
    else if (controller == "Auth" || controller == "Home")
    {
        Layout = "_Layout";
    }
    else
    {
        // Default para cualquier otro controlador
        Layout = "_Layout";
    }
}
